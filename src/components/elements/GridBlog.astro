---
import { Image } from "astro:assets";
import FormattedDate from "../../components/heads/FormattedDate.astro";

const { posts } = Astro.props;

---
<section class="blog-posts">
    {posts.map((post: any) => (
        <article id={post.slug} class="post">
            <a href={`/blog/${post.slug}`} class="post__item" >
                
                <Image
                    src={post.data.heroImage+'.jpg'}
                    srcset={
                        `${post.data.heroImage}-thumbnail.webp 450w,` +
                        `${post.data.heroImage}-medium.webp 768w,` +
                        `${post.data.heroImage}-large.webp 1024w`
                    }
                    sizes="(max-width: 450px) 450px, (max-width: 768px) 768px, 1024px"
                    alt={post.data.title}
                    class="post__image"
                    loading="eager"
                    width="768"
                    height="432"
                />
                <div class="post__content">
                    <div class="date">
                        <FormattedDate date={post.data.pubDate} />
                    </div>
                    <h2>{post.data.title}</h2>
                </div>
            </a>
        </article>
    ))}
</section>

<style>
    .blog-posts {
        display: grid;
        gap: 1rem;
    }

    @media (min-width: 768px) {
        .blog-posts {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    .post {
        border-radius: 0.5rem;
        overflow: hidden;
        position: relative;
        box-shadow: 4px 8px 10px rgba(var(--accent-light-rgb), 0.02);
        transition: all 0.3s ease;
    }
    .post:hover {
        box-shadow: 4px 8px 60px rgba(var(--accent-rgb), 0.2);
    }

    .post__item {
        display: block;
        text-decoration: none;
        color: var(--gray-dark);
        position: relative;
        transition: all 0.3s ease;
        
    }

    .post__item::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: radial-gradient(circle, rgba(0, 0, 0, .2) 1px, transparent 2px);
        background-size: 10px 10px;
        z-index: 1;
        transition: all 0.3s ease;
    }

    .post__item:hover {
        transform: scale(1.02);
    }
    .post__item:hover::before {
        background-image: radial-gradient(circle, rgba(0, 0, 0, .2) 1px, transparent 3px);
    }

    .post__image {
        display: block;
        width: 100%;
        height: auto;
        aspect-ratio: 16 / 9;
        object-fit: cover;
        object-position: top;
        
    }

    .post__content {
        position: absolute;
        bottom: 1em;
        left: 1em;
        right: 1em;
        z-index: 2;
    }

    .post__item .date{
        font-size: 0.8em;
        font-weight: 300;
        color: var(--gray-light);
        margin: 0;
    }

    .post__item h2 {
        font-weight: 700;
        color: var(--white);
        margin: 0;
        font-size: 1.5rem;
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
        transition: all 0.3s ease;
    }
    .post__item:hover h2{
        background-image: var(--accent-gradient-dark);
    }

    @media (min-width: 900px) {
        .post__item h2 {
            font-size: 2rem;
        }
    }
    @media (min-width: 1200px) {
        .post__item h2 {
            font-size: 2.5rem;
            width: 90%;
        }
    }
</style>