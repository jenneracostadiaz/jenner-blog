---

import Layout from "../../layouts/Layout.astro";
import GridBlog from "../../components/elements/GridBlog.astro";
import { getCollection } from 'astro:content';


const posts = (await getCollection('blog')).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout
    title="Coding Blog"
    description="Welcome to my blog! Here you will find articles on web development, programming, and technology. I hope you find them helpful and informative. If you have any questions or comments, please feel free to reach out to me. I would love to hear from you!"
>
	<main class="blog-page container">
        <h1>Coding &#60;&#47;&#62; Blog</h1>
        <p>
            Welcome to my blog! Here you will find articles on web development, programming, and technology. I hope you find them helpful and informative. If you have any questions or comments, please feel free to reach out to me. I would love to hear from you!
        </p>

        <GridBlog posts={posts} />
        
	</main>
</Layout>

<style>
    .blog-page {
        padding: 2rem 0;
    }

    h1 {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }

    p {
        font-size: 1em;
        font-weight: 300;
        color: var(--gray-light);
    }
    
</style>